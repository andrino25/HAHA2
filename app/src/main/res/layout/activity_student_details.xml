<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetails">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Name: "/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/txt1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="ID Number: "/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/txt2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Course: "/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/txt3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Age: "/>

    <TextView
        android:id="@+id/detailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Name here..."
        android:layout_toRightOf="@id/txt1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/detailsIdNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="ID number here..."
        android:layout_below="@id/detailsName"
        android:layout_toRightOf="@id/txt1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/detailsCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Course here..."
        android:layout_below="@id/detailsIdNumber"
        android:layout_toRightOf="@id/txt1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/detailsAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Course here..."
        android:layout_below="@id/detailsCourse"
        android:layout_toRightOf="@id/txt1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="___________________________________________________________"
        android:layout_below="@id/detailsAge"/>

</RelativeLayout>